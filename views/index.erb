<!doctype html>
<html>
   <head>
      <title>The Mealist</title>
      <link rel="stylesheet/less" type="text/css" href="style.less">
      <script src="less-1.1.3.min.js" type="text/javascript"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/mootools/1.3.1/mootools-yui-compressed.js" type="text/javascript"></script>
   </head>
   <body>
      <div id="header">
         <span id="headtext">
            <img src="header_logo.png" />
            <p>The Mealist</p>
         </span>
         <span id="headright">Sign Out</span>
      </div>
      <div id="container">
         <h1>Upcoming Meals</h1>
         <div id="list">
            <ul class="top">
               <li class="first">Dinner Tuesday</li>
               <div class="items">
                  <ul>
                     <li>Pasta</li>
                     <ul>
                        <li>pasta sauce</li>
                        <li>angel hair pasta</li>
                        <li>cheese</li>
                     </ul>
                     <li>red wine</li>
                     <li>salad</li>
                     <ul>
                        <li>greens</li>
                        <li>dressing</li>
                        <li>mushrooms</li>
                     </ul>
                  </ul>
               </div>

               <li class="first">Breakfast Wednesday</li>
               <div class="items">
                  <ul>
                     <li>Coffee</li>
                     <li>Banana</li>
                  </ul>
               </div>

               <% meals.each do |meal| %>
                  <li class="first"><%= meal.name %> <span class="time"><%= meal.date %></span></li>
               <% end %>

               <li class="first" id="last">
                  <form id="mealadd" class="clearfix" method="post">
                     <input id="mealname" type="text" name="meal" value="Meal name" />
                     <input id="mealdate" type="text" name="date" value="date" />
                     <input type="submit" value="Go." />
                  </form>
               </li>
            </ul>
         </div>
      </div>
   </body>
</html>
